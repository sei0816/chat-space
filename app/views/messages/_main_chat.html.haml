.main-chat
  .group-info
    .group-info__left
      %p.group-info__left__current-group
        = @group.name
      %ul.group-info__left__member-list
        Memberï¼š
        - @group.users.each do |user|
          %li.group-info__left__member-list__member-first
            = user.name
    = link_to '#', class: "edit-btn" do
      Edit
  .messages
    = render @messages
  .message-form
    = form_for [@group, @message] do |f|
      .new-message
        = f.text_field :content, class: 'text', placeholder: 'type a message'
        .type-message
          = f.label :image, class: 'type-message__image' do
            = icon('far', 'image')
            = f.file_field :image, class: 'file'
        = f.submit 'Send', class: 'send'