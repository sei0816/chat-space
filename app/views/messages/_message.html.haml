.message-list
  .message-header
    .message-header__current-name
      = message.user.name
    .message-header__time-data
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .talk
    - if message.content.present?
      %p.talk__content
        = message.content
    = image_tag message.image.url, class: 'talk__image', width: '30%' if message.image.present?