.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      %p.side-bar__user-name__top-items__name
        = current_user.name
      %ul.side-bar__user-name__top-items__icons
        %li.side-bar__user-name__top-items__edit
          = link_to new_group_path do
            = icon('far', 'edit')
        %li.side-bar__user-name__top-items__setting
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')
  .group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#', class: "group-set" do
          %p.group__group-name
            = group.name
          %p.group__latest-message
            まだメッセージがありません
            